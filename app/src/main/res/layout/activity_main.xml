<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date info..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/prayerTimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prayer times..."
                android:textSize="16sp"
                android:paddingBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prayer Time Reminders"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="12dp" />

            <!-- Fajr row -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/switchFajr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fajr" />

                <EditText
                    android:id="@+id/offsetFajr"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min before"
                    android:paddingStart="4dp" />
            </LinearLayout>

            <!-- Dhuhr -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/switchDhuhr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dhuhr" />

                <EditText
                    android:id="@+id/offsetDhuhr"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min before"
                    android:paddingStart="4dp" />
            </LinearLayout>

            <!-- Asr -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/switchAsr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Asr" />

                <EditText
                    android:id="@+id/offsetAsr"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min before"
                    android:paddingStart="4dp" />
            </LinearLayout>

            <!-- Maghrib -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/switchMaghrib"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Maghrib" />

                <EditText
                    android:id="@+id/offsetMaghrib"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min before"
                    android:paddingStart="4dp" />
            </LinearLayout>

            <!-- Isha -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/switchIsha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Isha" />

                <EditText
                    android:id="@+id/offsetIsha"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min before"
                    android:paddingStart="4dp" />
            </LinearLayout>

            <Button
                android:id="@+id/resetReminders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset to Default"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>
</layout>
